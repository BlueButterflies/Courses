@model CourseDatailViewModel

@{
    Layout = "_Layout";
}
<section class="course-detail">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title</h1>
        </div>

        <div class="col-md-3 d-flex align-items-center">
            <a href="#" class="btn btn-warning text-white register-btn">Subscribe</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <p>@Model.Description</p>
        </div>

        <div class="col-md-3">
            <aside>
                <author>@Model.Author</author>

                <div class="rating" title="@Model.Rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (Model.Rating >= i)
                        {
                            <i class="fas fa-star"></i>
                        }
                        else if (Model.Rating > i - 1)
                        {
                            <i class="fas fa-star-half-alt"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }

                    }
                </div>

                <div class="price">
                    @Model.DiscountPrice

                    @if (!Model.DiscountPrice.Equals(Model.FullPrice))
                    {

                        <br />
                        <s> @Model.FullPrice</s>
                    }
                </div>

                <div class="col-md-1">
                    <img src="@Model.ImgPath" width="50" />
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="course-lessions">
    <h2>Lessons @Model.Lessons.Count</h2>

    <hr />

    @foreach (var lesson in Model.Lessons)
    {
        <div class="row">
            <div class="col-md-9 d-flex align-items-center">
                <a href="#">@lesson.Title</a>
            </div>

            <div class="col-md-3 d-flex align-items-center lesson-duration">
                <i class="far fa-clock"><time>@lesson.Duration.ToString("m'm 's's'")</time></i>
            </div>
        </div>
    }

    <hr />

    <div class="row course-duration">
        <div class="col-md-9 d-flex align-items-center">
            Total time
        </div>

        <div class="col-md-3 d-flex align-items-center">
            <i class="far fa-clock"><time>@Model.TotalCourseDuration.ToString("h'h 'm'm 's's'")</time></i>
        </div>
    </div>
</section>