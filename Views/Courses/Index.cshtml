@{
    ViewData["Title"] = "IndexCourses";

    Layout = "_Layout";
}

<h1>Catalog</h1>

@for (int i = 1; i <= 10; i++)
{


    <div class="row">
        <div class="col-md-1">
            <img src="~/logo.png" width="50" />
        </div>
        <div class="col-md-5">
            <h2>Title of course</h2>
            <author>Name of author</author>
        </div>
        <div class="col-md-2">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="col-md-2">
            EUR 10.99 <br /> <s>EUR 13.99</s>
        </div>

        <div class="col-md-1">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="1">Details</a>
        </div>
    </div>
}